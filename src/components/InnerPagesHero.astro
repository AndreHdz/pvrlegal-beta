---
const {title, description, img,alt} = Astro.props
---
<div class="relative mb-8 py-12 bg-alt">

    <div class="container mx-auto flex flex-col md:flex-row gap-6 relative">
        <div class="md:w-2/3 flex flex-col gap-2 justify-center">
            <h1 class="text-alt3">{title}</h1>
            <p class="text-alt3 font-medium">
                {description}
            </p>
        </div>
        <div class="md:w-1/3 z-10 right-8 md:right-20 bottom-[-100px] md:top-4">
            <img
                src={img.src}
                alt={alt}
                class="w-40 md:w-64 mx-auto"
                width="260"
            />
        </div>

    </div>

</div>